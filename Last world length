#include <iostream>
#include <string>

int lengthOfLastWord(std::string s) {
    int length = 0;
    int i = s.length() - 1;
    
    // Skip trailing spaces
    while (i >= 0 && s[i] == ' ') {
        i--;
    }
    
    // Count the characters of the last word
    while (i >= 0 && s[i] != ' ') {
        length++;
        i--;
    }
    
    return length;
}

int main() {
    std::string input;
    std::cout << "请输入一个字符串：";
    std::getline(std::cin, input);
    
    int result = lengthOfLastWord(input);
    std::cout << "最后一个单词的长度为：" << result << std::endl;
    
    return 0;
}
